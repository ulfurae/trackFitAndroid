<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/goalLayout">

    <TextView
        android:text="Choose exercise:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exerciseSpinner"
        android:spinnerMode="dropdown" />

    <TextView
        android:text="Units:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="reps"
        android:id="@+id/repetitions"
        android:imeOptions="actionDone"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:hint="weight"
        android:id="@+id/goalWeight"
        android:imeOptions="actionDone"/>

    <TextView
        android:text="Start and End date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="start"
        android:id="@+id/startDate" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="end"
        android:id="@+id/endDate" />

    <Button
        android:id="@+id/saveGoal"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Save Goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addGoal"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/goalLog"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Goal Log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorNEW"
        android:onClick="goToViewGoals"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"/>
</LinearLayout>