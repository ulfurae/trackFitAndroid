<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Add Exercise"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="?attr/editTextColor"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose exercise:" />

    <Spinner
        android:id="@+id/exerciseSpinner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Units:" />

    <EditText
        android:id="@+id/repetitions"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="reps"
        android:focusable="false"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/weightLifted"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="weight"
        android:focusable="false"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/saveExercise"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:onClick="addExercise"
        android:text="Save Exercise"
        android:textSize="20sp" />

    <Button
        android:id="@+id/exerciseLog"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorNEW"
        android:onClick="goToExerciseLog"
        android:text="Exercise Log"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</LinearLayout>
