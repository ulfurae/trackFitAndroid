<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Goal entry"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="?attr/editTextColor"
        android:textSize="28sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="0dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Start Date: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/goalStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="5"
            android:text="Status: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/goalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="4"
            android:text="Weight: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="3"
            android:text="Repetitions: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/repetitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="2"
            android:text="Exercise: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/exerciseInEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="1"
            android:text="End Date: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/goalEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />


    </GridLayout>

    <Button
        android:id="@+id/deleteGoal"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Delete Goal"
        android:textSize="20sp" />

    <Button
        android:id="@+id/backToGoalLog"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorNEW"
        android:onClick="goToGoalLog"
        android:text="Go back"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />


</LinearLayout>