<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">

    <TextView
        android:id="@+id/goalId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Exercise entry"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="?attr/editTextColor"
        android:textSize="28sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goalId"
        android:layout_marginTop="0dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Date: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/exerciseEntryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="1"
            android:text="Exercise: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/exerciseInEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="2"
            android:text="Repetitions: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/repetitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="3"
            android:text="Weight: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_row="4"
            android:text="Type: "
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.WindowTitle"
            android:textColor="@color/darkGray" />

        <TextView
            android:id="@+id/typeInEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="?android:attr/editTextColor" />


    </GridLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Close"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClose" />

        <Button
            android:text="Delete"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDelete" />

    </LinearLayout>


</LinearLayout>