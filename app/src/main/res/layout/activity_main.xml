<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="?android:attr/windowBackground">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_width"
        android:layout_marginTop="20dp"
        android:id="@+id/profile_btn"
        style="@style/Widget.AppCompat.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:autoText="false"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:typeface="sans"
        android:textSize="24sp"
        android:text="Profile"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:onClick="viewProfile" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_width"
        android:id="@+id/addexercise_btn"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@color/colorPrimary"
        android:autoText="false"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:typeface="sans"
        android:textSize="24sp"
        android:text="Add Exercise"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:layout_below="@+id/profile_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:onClick="viewAddExercise" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_width"
        android:id="@+id/addgoal_btn"
        style="@style/Widget.AppCompat.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@color/colorPrimary"
        android:autoText="false"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:typeface="sans"
        android:textSize="24sp"
        android:text="Add Goal"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/addexercise_btn"
        android:layout_alignParentStart="true"
        android:elevation="0dp"
        android:onClick="viewAddGoal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_width"
        android:id="@+id/exerciselog_btn"
        style="@style/Widget.AppCompat.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@color/colorPrimaryDark"
        android:autoText="false"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:typeface="sans"
        android:textSize="24sp"
        android:text="Exercise Log"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/addgoal_btn"
        android:layout_alignParentStart="true"
        android:onClick="viewExerciseLog" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/notification_large_icon_width"
        android:id="@+id/goallog_btn"
        style="@style/Widget.AppCompat.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:background="@color/colorPrimaryDark"
        android:autoText="false"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:typeface="sans"
        android:textSize="24sp"
        android:text="Goal Log"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/exerciselog_btn"
        android:layout_alignParentStart="true"
        android:onClick="viewGoalLog" />
</RelativeLayout>
